{
  "name": "clients",
  "description": "Clients for a word reminder application that allows users to store words in their dictionary and reminds users of the words that they store so that users can remember words that they come across in their readings.",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build --config vite.sw.config.ts && vite build --config vite.config.ts",
    "extension": "NODE_ENV=development tsc -b && vite build --mode development",
    "sw": "vite build --config vite.sw.config.ts",
    "coverage": "vitest run --coverage",
    "test": "vitest",
    "pree2e": "npm run sw && npm run extension",
    "e2e": "playwright test",
    "e2e:report": "playwright show-report",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.1",
    "@capacitor/core": "^7.4.1",
    "@capacitor/push-notifications": "^7.0.1",
    "@tanstack/react-query": "^5.64.2",
    "common": "file:../common",
    "cronstrue": "^2.56.0",
    "lucide-react": "^0.474.0",
    "react": "19.0.0",
    "react-css-modules": "^4.7.11",
    "react-dom": "19.0.0",
    "react-router-dom": "^7.1.3"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.4.1",
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.52.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.0.304",
    "@types/react": "19.0.8",
    "@types/react-css-modules": "^4.6.8",
    "@types/react-dom": "19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.3",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "jsdom": "^26.0.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5",
    "vitest": "^3.0.3"
  }
}
